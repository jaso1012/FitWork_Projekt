<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/android_list_view_tutorial_with_example"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="5dp">

    <ImageView
        android:id="@+id/hist_listview_image"
        android:layout_width="170dp"
        android:layout_height="126dp"
        android:contentDescription="@string/app_name"
        android:paddingStart="5dp"
        android:paddingTop="10dp"/>

    <LinearLayout
        android:layout_width="221dp"
        android:layout_height="145dp"
        android:orientation="vertical"
        android:paddingStart="5dp"
        android:paddingTop="10dp"
        android:paddingEnd="5dp">

        <TextView
            android:id="@+id/hist_listview_item_title"
            android:layout_width="198dp"
            android:layout_height="40dp"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/hist_listview_datum"
            android:layout_width="198dp"
            android:layout_height="20dp"
            android:textSize="12sp"
            android:paddingTop="5dp"/>

        <TextView
            android:id="@+id/hist_listview_dauer"
            android:layout_width="198dp"
            android:layout_height="20dp"
            android:paddingTop="5dp"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/hist_listview_zieldauer"
            android:layout_width="198dp"
            android:layout_height="20dp"
            android:paddingTop="5dp"
            android:textSize="12sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/hist_listview_wiederholungen"
            android:layout_width="198dp"
            android:layout_height="20dp"
            android:paddingTop="5dp"
            android:textSize="12sp"
            android:visibility="gone"/>

    </LinearLayout>
</LinearLayout>